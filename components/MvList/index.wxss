.lists{
  color:rgba(255,255,255,0.5);
  display: flex;
  padding: 10rpx;
  flex-wrap: wrap;
}
.lists .list{
  flex: 50% 0 0;
}
.lists .list .detail{
  padding: 10rpx;
  margin-bottom: 10rpx;
}
.lists .list .detail .img{
  width: 100%;
  height: auto;
}
.lists .list .detail .title{
  font-size: 24rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 10rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.lists .list .detail .date{
  font-size: 20rpx
}