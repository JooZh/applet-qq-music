.loading-box{
  text-align: center;
  width: 100%;
  height: 30rpx;
  padding: 25rpx 0 55rpx 0;
  color: #999;
  font-size: 22rpx;
}
.loading-box .text{
  vertical-align: middle;
  display: inline-block;
  margin-left: 10rpx;
}
.loading-box .loading{
  vertical-align: middle;
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 5rpx solid #BEBEBE;
  border-left: 5rpx solid #666;
  animation: load 0.5s linear infinite;
}
@-webkit-keyframes load{
    from{-webkit-transform:rotate(0deg);}
    to{-webkit-transform:rotate(360deg);}
}