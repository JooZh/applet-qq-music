/* 背景图片 */
page{
  height: 100%;
  width: 100%;
}
.detail-scroll{
  height: 100%;
  overflow: hidden
}
.infos{
  height: 300rpx;
  width: 100%;
}
.infos .singer-bg{ 
  background: #353535;
  height: 300rpx;
  -webkit-filter: blur(30px);
  filter: blur(30px);
  opacity: 0.4;
}
.infos .singer-bg .background{
  width: 100%;
  height: 280rpx;
} 
.infos .info-content{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  color: #ccc;
}
.infos .info-content .min-avatar{
  width: 200rpx;
  height: 200rpx;
  flex: 0 0 200rpx;
  margin: 50rpx;
  background: #353535;
}
.infos .info-content .info{
  display: inline-block;
  margin: 50rpx 20rpx 0 0;
  flex: 1;
  height: 200rpx;
}
.infos .info-content .info .name{
  font-size: 35rpx;
  line-height: 1.2;
  padding: 20rpx 0;
  overflow: hidden;
  color: #ffcd32;
}
.infos .info-content .info .fans{
  font-size: 26rpx;
  line-height: 1.5
}

/* 导航 */
.tab{
  width: 100%;
  min-height: 100%;
  position: relative;
  
}
.tab .fixed{
  position: fixed;
  top: 0;
  left: 0; 
  z-index: 2;
  background: #252525; 
  transition: background 0.5s ease;
}
.tab-list {
  background: transparent;
  transition: background 0.5s ease;
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #202020;
  line-height: 70rpx;
  position: absolute;
  top: 0;
  left: 0
}
.tab-list .tab-list-item {
  font-size: 28rpx;
  flex: 1;
  color: rgba(255,255,255,0.5);
}
.tab-list .tab-list-item text{
  padding: 0 30rpx;
}
.tab-list .tab-list-item.left {
  text-align: left;
}
.tab-list .tab-list-item.right {
  text-align: right
}
