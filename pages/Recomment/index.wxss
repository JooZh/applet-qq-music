/* 背景图片 */
page{
  height: 100%;
  width: 100%;
}
.infos{
  height: 300rpx;
  width: 100%;
}
.infos .swiper{
  width: 100%;
  height: 100%;
}
.infos .swiper image{
  width: 100%
}

/* 导航 */
.tab{
  width: 100%;
  min-height: 100%;
  position: relative;
  
}
.tab .fixed{
  position: fixed;
  top: 0;
  left: 0; 
  z-index: 2;
  background: #252525; 
  transition: background 0.5s ease;
}
.tab-list {
  background: transparent;
  transition: background 0.5s ease;
  width: 100%;
  border-bottom: 1rpx solid #202020;
  line-height: 70rpx;
  position: absolute;
  top: 0;
  left: 0
}
.tab-list .tab-list-item {
  font-size: 28rpx;
  text-align: center;
  color: #ffcd32;
}
