/* 背景图片 */
page{
  height: 100%;
  width: 100%;
}
.detail-scroll{
  height: 100%;
  overflow: hidden
}
.infos{
  height: 600rpx;
  width: 100%;
}
.infos .singer-bg{ 
  background: #353535;
  height:100%;
  /* -webkit-filter: blur(30px); */
  /* filter: blur(30px); */
  opacity: 0.8;
  overflow: hidden;
  margin-top: -100rpx;
}
.infos .singer-bg .background{
  width: 100%;
  /* height: 280rpx; */
} 
.infos .info-content{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 500rpx;
  display: flex;
  /* display: none; */
}
.infos .info-content .min-avatar{
  width: 200rpx;
  height: 200rpx;
  flex: 0 0 200rpx;
  border-radius: 50%;
  margin: 50rpx;
  background: #353535;
}
.infos .info-content .info{
  display:flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
}
.infos .info-content .info .name{
  font-size: 50rpx;
  line-height: 2.5;
  height: 125rpx;
  overflow: hidden;
}
.infos .info-content .info .fans{
  display: inline-block;
  padding: 5rpx 30rpx;
  font-size: 30rpx;
  line-height: 1.5;
  color: rgba(0,0,0,0.8);
  background: rgba(255,205,50,0.8);
  border-radius: 50rpx;
}

/* 导航 */
.tab{
  width: 100%;
  min-height: 100%;
  position: relative;
  
}
.tab .fixed{
  position: fixed;
  top: 0;
  left: 0; 
  z-index: 2;
  background: #252525; 
  transition: background 0.5s ease;
}
.tab-list {
  background: transparent;
  transition: background 0.5s ease;
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #202020;
  text-align: center;
  line-height: 70rpx;
  position: absolute;
  top: 0;
  left: 0
}
.tab-list .tab-list-item {
  font-size: 28rpx;
  flex: 1;
  color: rgba(255,255,255,0.5);
}
.tab-list .tab-list-item .on {
  color: #ffcd32;
}

.swiper{
  height: 100%;
}
/* 内容主体 */
 .tab-plan{
  position: absolute;
  left: 0;
  right: 0;
  bottom:0;
  top:72rpx;
  width: 100%;
  overflow: hidden;
} 


